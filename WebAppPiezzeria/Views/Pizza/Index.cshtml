@model List<Pizza>


 <div class = "container">

              <div class = "row mt-3 justify-content-center">
                  
                  <h1 class= "text-center"> Le nostre pizze</h1>
                  <div class = "col-2 ">
                  <img class="img-fluid" widht=10px src="https://www.ipastock.net/members/get-image.php?s=st4&u=thumbs/5226485/vector/20918/209182924/api_thumb_450.jpg" 
                  class="card-img-top" alt="primaFoto">
                  </div>
              </div>

    <div class="row text-center justify-content-center gx-0 me-5">
                
        @if (Model.Count() == 0)
        {
            <h3>
                Non hai inserito nessuna pizza!
            </h3>
        }
        else
        {
            
        
                @foreach (Pizza pizzaNellaLista in Model)
                {
                   <div class="col-12 col-sm-3">
                   
                            <div class="card shadow mb-5 bg-body rounded" style="width: 18rem;">
                                            <img class="img-fluid" src="@pizzaNellaLista.Img" 
                                            class="card-img-top" alt="primaFoto">
                              <div class="card-body p-0 pb-0">
                                   
                                  <h6 class="card-title text-uppercase bg-danger pb-2 pt-2 text-white ">@pizzaNellaLista.Nome</h6>
                                  <p class="card-text ps-2 pe-2 mb-4 mt-3"><small> @pizzaNellaLista.Descrizione</small></p>
                     
                               </div>
                                        <ul class="list-group list-group-flush pb-0 mb-2">
                                            <li class="list-group-item text-danger"><small>Prezzo:</small><br>
                                                <span class="text-black fw-bold"><small>@pizzaNellaLista.Prezzo</small></span>
                                                <span class="text-secondary"></span>
                                  
                                            </li>
                                        
                                            <p><a class="btn btn-primary" href="@Url.Action("Details", "Pizza",new{Id = pizzaNellaLista.Id})" role="button">Qui</a></p>
                                           
                                            <a class="btn btn-primary" href="@Url.Action("ModificaPizza", "Pizza", new{Id = pizzaNellaLista.Id})" role="button">Aggiungi Pizza</a>
                                             <form class="d-inline" action="@Url.Action("EliminaPizza", "Pizza", new {id= pizzaNellaLista.Id})" method="post">
                                             @Html.AntiForgeryToken()
                                             <button type="submit" class="btn btn-danger">Elimina</button>
                        </form>
                                        </ul>    
                    
                            </div>
                    </div>  
               
                }
         
            
            }     



          </div>
          
</div>


<div class = "container">


    <h1> Tasto per aggiungere la pizza</h1>
    <a class="btn btn-primary" href="@Url.Action("CreaPaginaPizza", "Pizza")" role="button">Aggiungi Pizza</a>
    
</div>


